{
    "Create MultiViz Kubernetes deployment template": {
        "prefix": "mv-k8s-deployment",
        "body": [
            "kind: Deployment",
            "apiVersion: apps/v1",
            "metadata:",
            "  name: ${1:deployment_name}",
            "  namespace: default",
            "spec:",
            "  replicas: 1",
            "  selector:",
            "    matchLabels:",
            "      name: ${2:selector/template name, e.g. multiviz}",
            "  template:",
            "    metadata:",
            "      labels:",
            "        name: ${2:selector/template name, e.g. multiviz}",
            "    spec:",
            "      volumes:",
            "        - name: multiviz-pv-storage",
            "          persistentVolumeClaim:",
            "            claimName: ${3:persistant volume claim name, e.g. multiviz-pvc}",
            "      containers:",
            "        - name: multiviz",
            "          image: de.icr.io/crns-vikings/mv",
            "          env:",
            "            - name: MV_DatabaseProvider",
            "              value: sqlite",
            "          ports:",
            "            - containerPort: 80",
            "              protocol: TCP",
            "          volumeMounts:",
            "            - name: multiviz-pv-storage",
            "              mountPath: /root",
            "          imagePullPolicy: Always",
            "      restartPolicy: Always"
        ],
        "description": "Create MultiViz Kubernetes deployment template"
    },
    "Create MultiViz Kubernetes persistent volume claim template": {
        "prefix": "mv-k8s-persistent-volume-claim",
        "body": [
            "            kind: PersistentVolumeClaim",
            "            apiVersion: v1",
            "            metadata:",
            "              name: ${1:multiviz-pvc-name}",
            "              namespace: default",
            "              labels:",
            "                billingType: ${2:hourly}",
            "                region: ${3:eu-de}",
            "                zone: ${4:fra05}",
            "            spec:",
            "              accessModes:",
            "                - ReadWriteMany",
            "              resources:",
            "                requests:",
            "                  storage: ${5:4Gi}",
            "              storageClassName: ${6:ibmc-file-retain-silver}",
            "              volumeMode: ${7:Filesystem}"
        ],
        "description": "Create MultiViz Kubernetes persistent volume claim template"
    }
}